     <h2>User info</h2>
      <table class='table'>
			  <tr>
			  <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
			  </tr>
			  <tr>
				  <th>name</th>
				  <th><%= user.name %></th>
			  </tr>
			  <tr>
				  <th>introduction</th>
				  <th><%= user.introduction %></th>
			  </tr>
			</table>

			<div class='row'>
	         <p><%= link_to "Profile", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></p>
			</div>

      <h2 class="mt-3">New book</h2>

     		 <%= form_with model:book, local:true do |f| %>

    	    <label for="book_title">Title</label>
    		  <div class="title">
    		      <%= f.text_field :title, value: nil, class: "col-xs-12 pull-right" %>
          </div>
		      <div class="form-group">
			      <label for="book_opinion">Opinion</label>
			        <div class="opinion">
			      	  <%= f.text_area :body, value: nil, class: "col-xs-12 pull-right" %><br>
			        </div>
			      	  <%= f.submit 'Create Book', :class=>"btn btn-success" %><br>
			     </div>
				<% end %>
    </div>
